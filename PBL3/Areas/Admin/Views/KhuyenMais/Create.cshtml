@model PBL3.Models.KhuyenMai

@{
    ViewBag.Title = "Tạo mới khuyến mãi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Tạo mới khuyến mãi</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>KhuyenMai</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group ">
            <label>Ngày bắt đầu<span class="text-danger">(*)</span></label>
            <div class="col-md-3">
                <input type="datetime-local" class="form-control" name="BatDauKM" />
                @Html.ValidationMessageFor(model => model.BatDauKM, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Ngày kết thúc<span class="text-danger">(*)</span></label>
            <div class="col-md-3">
                <input type="datetime-local" class="form-control" name="KetThucKM" />
                @Html.ValidationMessageFor(model => model.KetThucKM, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Nội dung<span class="text-danger">(*)</span></label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.NoiDungKM, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NoiDungKM, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Loại<span class="text-danger">(*)</span></label>
            <div class="col-md-3">
                @Html.DropDownList("LoaiKM", new SelectList(new List<Object>
           {
               new {value = 0, text ="Giảm trực tiếp"},
               new {value = 1, text ="Theo phần trăm"},
           },
           "value",
           "text"

           ), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LoaiKM, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 text-right">
                <button type="submit" value="Save" class="btn btn-sm btn-success"><i class="fa-solid fa-plus"></i> Thêm mới</button>
            </div>
        </div>
    </div>
}

<div class="form-group">
    <div class="col-md-offset-2 ">
        <button type="button" name="back" class="btn btn-success btn-md" onclick="location.href='/Admin/KhuyenMais/Index'">Quay lại</button>
    </div>
</div>
