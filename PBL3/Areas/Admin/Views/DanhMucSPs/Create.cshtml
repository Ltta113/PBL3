@model PBL3.Models.DanhMucSP

@{
    ViewBag.Title = "Tạo mới danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Tạo mới danh mục sản phẩm</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>DanhMucSP</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label>Tên danh mục<span class="text-danger">(*)</span></label>
        <div class="col-md-3">
            @Html.EditorFor(model => model.TenDanhMuc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger" })
        </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 text-right">
                <button type="submit" value="Save" class="btn btn-sm btn-success"><i class="fa-solid fa-plus"></i> Thêm mới</button>
            </div>
        </div>
    </div>
}

<div class="form-group">
    <div class="col-md-offset-2 ">
        <button type="button" name="back" class="btn btn-success btn-md" onclick="location.href='/Admin/DanhMucSPs/Index'">Quay lại</button>
    </div>
</div>
