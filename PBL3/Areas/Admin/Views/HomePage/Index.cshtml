@model IEnumerable<PBL3.Models.Model_View.ThongKeSanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Thống kê</h2>
<div class="row justify-content-center">
    <div class="col-lg-4 col-md-12">
        <div class="white-box analytics-info" style="background: #fff08c; height: 100px; border-radius: 5px; box-shadow: 0px 3px 3px 3px #888888;">
            <h4 class="box-title" style="color: white">Tổng doanh thu</h4>
            
                <ul class="">
                    <li class="ms-auto"><span class="counter text-success"> @ViewBag.total</span></li>
                    @if (ViewBag.yeartotal >= ViewBag.preyeartotal && ViewBag.preyeartotal != 0)
                    {
                        <li class="ms-auto"><span class="counter text-success"> Tăng @(((double)ViewBag.yeartotal/(double)ViewBag.preyeartotal)*100)</span></li>
                    }
                    else if (ViewBag.yeartotal < ViewBag.preyeartotal && ViewBag.preyeartotal != 0)
                    {
                        <li class="ms-auto"><span class="counter text-success"> Giảm @(((double)ViewBag.yeartotal/(double)ViewBag.preyeartotal)*100) <i class="fa-solid fa-arrow-down" style="color: red"></i></span></li>
                    }
                    else
                    {
                        <li class="ms-auto"><span class="counter text-success"> Giảm @(((double)ViewBag.yeartotal/(double)ViewBag.preyeartotal)*100) <i class="fa-solid fa-arrow-down" style="color: red"></i></span></li>
                        @*<li class="ms-auto"><span class="counter text-success"> Không thay đổi </span></li>*@
                    }
                </ul>
        </div>
    </div>
    <div class="col-lg-4 col-md-12">
        <div class="white-box analytics-info" style="background: #FF99CC; height: 100px;border-radius: 5px; box-shadow: 0px 3px 3px 3px #888888;">
            <h4 class="box-title" style="color: white">Doanh thu hôm nay</h4>
            <ul class="">
                <li class="ms-auto"><span class="counter text-purple">@ViewBag.datetotal</span></li>
            </ul>
        </div>
    </div>
    <div class="col-lg-4 col-md-12">
        <div class="white-box analytics-info" style="background: #96ffa1; height: 100px;border-radius: 5px; box-shadow: 0px 3px 3px 3px #888888;">
            <h4 class="box-title" style="color: white">Hóa đơn chưa xác nhận</h4>
            <ul class="">
                <li class="ms-auto">
                    <span class="counter text-info"> @ViewBag.sohoadon</span>
                </li>
            </ul>
        </div>
    </div>
</div>

<div>
    <canvas id="myChart"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const ctx = document.getElementById('myChart');
    const listlabels = @Html.Raw(Json.Encode(Model.Select(p => p.TenSP).ToList()));
    const listdatas = @Html.Raw(Json.Encode(Model.Select(p => p.SoLuong).ToList()));
    new Chart(ctx, {
        type: 'bar',
        data: {
            datasets: [{
                label: '',
                data: listdatas,
            }],
            labels: listlabels,
        },
        options: {
            indexAxis: 'y',

            elements: {
                bar: {
                    borderWidth: 0.2,
                }
            },
            responsive: true,
            plugins: {
                legend: {

                    position: 'right',
                },
                title: {
                    display: true,
                    text: 'Các mặt hàng bán được',
                    font: {
                        size: 20
                        }
                }
            }
        },
    });
</script>


