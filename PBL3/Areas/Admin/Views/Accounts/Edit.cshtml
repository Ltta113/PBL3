@model PBL3.Models.Account

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";


}


<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Thay đổi quyền</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_Account)
        @Html.HiddenFor(model => model.Username)

        <div class="form-group">
            <div class=" col-md-2">
                <label for="quyen">Quyền truy cập </label>
            </div>
            <div class="col-md-3">
                @Html.DropDownList("Quyen",
               new SelectList(
                      new List<Object>{
                           new { value = 0 , text = "Admin"  },
                           new { value = 1 , text = "Khách hàng" },
                        },
                      "value",
                      "text",
                       Model.Quyen
               ), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Quyen, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-offset-2 text-right">
                        <button type="submit" value="Save" class="btn btn-sm btn-success"> Lưu thay đổi</button>
                    </div>
                </div>
            </div>
        </div>


    </div>
}
<div class="form-group">
    <div class="col-md-offset-2 ">
        <button type="button" name="back" class="btn btn-success btn-md" onclick="location.href='/Admin/Accounts/Index'">Quay lại</button>
    </div>
</div>

