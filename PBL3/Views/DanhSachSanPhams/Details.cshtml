@model PBL3.Models.SanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link href="~/Content/ChiTiet.css" rel="stylesheet" />
}

@using (Html.BeginForm("MuaNgay", "MuaHangs", FormMethod.Post))
{
    <div class="container" style="margin-bottom: 100px;">
        <ul class="container__category-menu">
            <li class="category-menu__items">@Html.ActionLink("Tất cả sản phẩm", "Index", "DanhSachSanPhams", new { @DanhMucsp = "" }, null)</li>
            @{
                List<String> list = (List<String>)System.Web.HttpContext.Current.Session["ListDanhMuc"];
            }
            @foreach (String listDanhMuc in list)
            {
                <li class="category-menu__items">@Html.ActionLink(listDanhMuc, "Index", "DanhSachSanPhams", new { @DanhMucsp = listDanhMuc }, null)</li>
            }

        </ul>
        <div class="container__main">
            <h2 style="color: #359DD9;">Chi tiết sản phẩm</h2>
            <div class="row">
                <div class="row--item">
                    <div class="row--photo">
                        <img src="https://pre-dispatcher.tclking.com/content/dam/brandsite/region/vietnam/tivi-tcl-55-inch/Q716-front.png?auto=webp,smallest" alt="" style="height:350px; width: 500px;">
                    </div>
                    <span>Tivi Samsung 4K</span>
                </div>
                <div class="row--item">
                    <div class="item--price" style="padding: 10px;">
                        <div class="item--price old">16,990,000đ</div>
                        15,999,000đ
                    </div>
                    <div class="item--number">
                        <h3 style="color: #359DD9;">Số lượng:</h3>
                        <input type="number" class="pick-number" min="0" placeholder="1">
                    </div>
                    <div class="item--button">
                        <div class="btn-buy">
                            <i class="fa-solid fa-cart-shopping fa-xl" style="margin-right: 15px;"></i>Thêm vào giỏ hàng
                        </div>
                        <div class="btn-buy">
                            <i class="fa-solid fa-wallet fa-xl" style="margin-right: 15px;"></i>Mua ngay
                        </div>
                    </div>
                </div>
            </div>
            <h3 style="color: #359DD9;">Thông tin sản phẩm</h3>
            <div class="item--detail">
                <div class="row" style="justify-content: left;">
                    <h4 style=" flex: 0.35;">Tên sản phẩm:</h4>
                    <div class="label">Tivi Samsung OLED 4K 40inch</div>
                </div>
                <div class="row" style="justify-content: left;">
                    <h4 style=" flex: 0.35;">Danh mục:</h4>
                    <div class="label">Tivi</div>
                </div>
                <div class="row" style="justify-content: left;">
                    <h4 style=" flex: 0.35;">Nhãn hiệu sản phẩm:</h4>
                    <div class="label">Samsung</div>
                </div>
                <div class="row" style="justify-content: left;">
                    <h4 style=" flex: 0.35;">Mẫu sản phẩm:</h4>
                    <div class="label">OLED 4K 40inch</div>
                </div>
                <div class="row" style="justify-content: left;">
                    <h4 style=" flex: 0.35;">Mô tả sản phẩm:</h4>
                    <div class="label">
                        Điều khiển bằng giọng nói: Bixby (Chưa có tiếng Việt), Google Assistant có tiếng Việt, Tìm kiếm giọng nói trên YouTube bằng tiếng Việt<br>
                        Remote thông minh: One Remote sạc qua USB C & ánh sáng
                    </div>
                </div>
            </div>
        </div>
    </div>
}